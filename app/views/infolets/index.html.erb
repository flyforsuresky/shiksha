<p id="notice"><%= notice %></p>

<h1>Infolets</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infolets.each do |infolet| %>
      <tr>
        <td><%= infolet.student_id %></td>
        <td><%= infolet.teacher_id %></td>
        <td><%= link_to 'Show', infolet %></td>
        <td><%= link_to 'Edit', edit_infolet_path(infolet) %></td>
        <td><%= link_to 'Destroy', infolet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

